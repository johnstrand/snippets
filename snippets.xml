<snippets>
  <category name="git">
    <snippet name="checkout-remote">
      git checkout --track {{origin}}/{{&lt;branch&gt;}}
    </snippet>
    <snippet name="refresh-remote">
      git remote update {{origin}} --prune
    </snippet>
    <snippet name="add-existing-github">
      git remote add {{origin}} git@github.com:{{account}}/{{repo}}.git
    </snippet>
    <snippet name="push-set-upstream">
      git push -u {{origin}} {{master}}
    </snippet>
  </category>
  <category name="dotnet">
    <snippet name="add-nuget">
      dotnet add {{&lt;project&gt;}} package {{&lt;package&gt;}}
    </snippet>
  </category>
  <category name="docker">
